			<textarea id="custComment" name= "custComment" rows="4" cols="50" style="font-family:Century Gothic"required> </textarea><br>

			<input type="submit"  onclick="return displayconfirmmsg()"></input>
			<input type="button" value ="Reset Form" onclick="displayresetmsg()"></input>
		</form>
	</div>
