<script type ="text/javascript">
	//confirmation after clicking on the submit button//
	function displayconfirmmsg()
	{
		var submitButton = confirm("Are you sure you want to submit?")
		if (submitButton === false){
			return false;
		}
	}

	//confirmation after clicking on the reset button//
	function displayresetmsg()
	{
		var resetButton = confirm("Are you sure you want to reset?")
		if (resetButton === true) {
			var form = document.getElementById("contactForm")
			form.reset();
		} else {
			return false;
		}
	}
</script>
